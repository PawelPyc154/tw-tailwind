{
  "compilerOptions": {
    "target": "es2019",
    "module": "Node16",
    "lib": [
      "esnext",
      "DOM"
    ],
    "moduleResolution": "node16",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "alwaysStrict": true,
    "rootDirs": [
      "./src"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ]
}